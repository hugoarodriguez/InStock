<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvVentas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProd"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/clothes_hanger1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvCod" />

            <TextView
                android:id="@+id/tvCate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvCate" />

            <TextView
                android:id="@+id/tvNomPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvNombrePro" />

            <TextView
                android:id="@+id/tvCantPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvCantPro" />

            <TextView
                android:id="@+id/tvPrecioPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvPrecioPro" />

            <TextView
                android:id="@+id/tvClientePro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvCliente" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>